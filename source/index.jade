doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Placeholder Title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css')
    link(rel='stylesheet', href='css/styles.css')
    //- include _favicon
  body
    header
      div.grid__row
        div.grid__col--2
          h1.logo
            a(href="#") 
              span.bold Your
              span.light App
                sup TM
        div.grid__col--2
        div.grid__col--2
        div.grid__col--2
        div.grid__col--2
        div.grid__col--2
          p test
    main



      div.grid__row
        div.grid__col--12
          div.contain
            h5 Daily Traffic
            canvas#chart-line



      div.grid__row
        div.grid__col--6
          div.contain
            h5 Daily Traffic
            canvas#chart-bar
        div.grid__col--6
          div.contain
            h5 Mobile Users
            canvas#chart-doughnut


      div.grid__row
        div.grid__col--12
          h5 Social Status
          table.social-stat-container
            tr
              th(rowspan="2")
                div.social-icon--twitter
              th.social-icon-name Twiter
            tr
              td.social-icon-data 10,345

          table.social-stat-container
            tr
              th(rowspan="2")
                div.social-icon--facebook
              th.social-icon-name Facebook
            tr
              td.social-icon-data 8,739

          table.social-stat-container
            tr
              th(rowspan="2")
                div.social-icon--google
              th.social-icon-name Google+
            tr
              td.social-icon-data 2,530


      div.grid__row
        div.grid__col--6
          div.contain
            h5 New Members


        div.grid__col--6
          div.contain
            h5 Recent Activity

      div.grid__row
        div.grid__col--6
          div.contain
            h5 Mesaage User
            form
              input.form__input(id="username" type="text" name="name" placeholder="Search for User")
              textarea.form__input(name="textarea" rows="5" cols="45" placeholder="Write something here")
              input.btn--default(type="submit" value="Send")


        div.grid__col--6
          div.contain
            h5 Settings

            div.row
              label._50(for="email-notifications") Send Email Notifications
              div.onoffswitch
                  input.onoffswitch-checkbox(id="email-notifications" type="checkbox" name="onoffswitch" checked) 
                  label.onoffswitch-label(for="email-notifications")
                      span.onoffswitch-inner
                      span.onoffswitch-switch
            br
            br
            div.row
              label._50(for="public-profile") Set Profile to Public
              div.onoffswitch
                  input.onoffswitch-checkbox(id="public-profile" type="checkbox" name="onoffswitch" checked) 
                  label.onoffswitch-label(for="public-profile")
                      span.onoffswitch-inner
                      span.onoffswitch-switch


  
            include jade_partials/_timezones
            div
              input.btn--default(value="SAVE")
              input.btn--disabled(value="CANCEL")














