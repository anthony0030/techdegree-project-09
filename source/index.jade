    //- include _favicon
  body
    div(style="display:none")
      include svgs/icon-bell.svg
      include svgs/icon-arrow-right.svg

    header
      div.grid__row.menu--row
        div.grid__col--2.logo--col
          h1.logo
            a(href="#") 
              span.bold Your
              span.light App
                sup &trade;
        div.grid__col--1.notification--col
          a(onclick="displayModal(modalNotifications);").notification-big
            svg.bell
              use(xlink:href="#bell")
        div#user_curent.grid__col--3.no-margin.user_curent--col
          a.user_curent
            img.user_image(src="https://randomuser.me/api/portraits/men/86.jpg")
            p.user_name Josh Sullivan

    main

      div.nav__side--bg
        ul
          li
            a(onclick="displayModal(modalNotifications);").hidden-bell
              svg.bell
                use(xlink:href="#bell")

      nav.nav__side
        ul
          li.notification-small
            a(onclick="displayModal(modalNotifications);")
              svg.bell
                use(xlink:href="#bell")
          li
            a(href="#dashboard-area")
              include svgs/icon-dashboard.svg
          li
            a(onClick="document.getElementById('members-area').scrollIntoView(true);")
              include svgs/icon-members.svg
          li
            a(href="#visits-area")
              include svgs/icon-visits.svg
          li
            a(href="#settings-area")
              include svgs/icon-settings.svg

        div.headergrid__row
          div.progress-container
            div#myBar.progress-bar


      
      div.grid__row
        div.grid__col--3
          h2.dashboard__title Dashboard
        div.grid__col--9.serarch
          input.serarch--box(type="text" placeholder="Search")


      div.grid__row
        div.grid__col--12
          div#alerts.contain



      div.grid__row
        div.grid__col--12
          div.contain
            h5 Daily Traffic
            ul#all-options.visits-list
              li(onClick="drawLineChartHourly()")#hourly-option.visits__option Hourly
              li(onClick="drawLineChartDaily()")#daily-option.visits__option Daily
              li(onClick="drawLineChartWeekly()")#weekly-option.visits__option Weekly
              li(onClick="drawLineChartMonthly()")#monthly-option.visits__option Monthly
            canvas#chart-line



      div#dashboard-area.grid__row
        div.grid__col--6
          div.contain
            h5 Daily Traffic
            canvas#chart-bar
        div.grid__col--6
          div.contain
            h5 Mobile Users
            canvas#chart-doughnut
          

      div.grid__row
        div.grid__col--12.social-stats-col
          h5.social-stats-title Social Status
          div.all-social-stats
            table.social-stat-container
              tr
                th(rowspan="2")
                  div.social-icon--twitter
                th.social-icon-name Twiter
              tr
                td.social-icon-data 10,345

            table.social-stat-container
              tr
                th(rowspan="2")
                  div.social-icon--facebook
                th.social-icon-name Facebook
              tr
                td.social-icon-data 8,739

            table.social-stat-container
              tr
                th(rowspan="2")
                  div.social-icon--google
                th.social-icon-name Google+
              tr
                td.social-icon-data 2,530

      
