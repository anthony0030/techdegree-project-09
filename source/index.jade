      div.grid__row
        div.grid__col--6
          div.contain
            h5 Mesaage User
            form#mesaage__user--form
              input#userName.form__input(type="text" name="name" placeholder="Search for User")
              textarea#userMsg.form__input(name="textarea" rows="5" cols="45" placeholder="Write something here")
