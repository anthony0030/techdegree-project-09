doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title YourApp&trade;
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css')
    link(rel='stylesheet', href='css/styles.css')
    //- include _favicon
  body
    div(style="display:none")
      include svgs/icon-bell.svg
    header
      div.grid__row
        div.grid__col--2
          h1.logo
            a(href="#") 
              span.bold Your
              span.light App
                sup &trade;
        div.grid__col--2.no-margin
          a.notification-big
            svg.bell
              use(xlink:href="#bell")
        div.grid__col--3.no-margin
          a.user
            img.user_image(src="https://randomuser.me/api/portraits/men/86.jpg")
            p.user_name Josh Sullivan


      div.nav__side--bg
        ul
          li
            a.hidden-bell
              svg.bell
                use(xlink:href="#bell")

      nav.nav__side
        ul
          li.current
            a(href="#dashboard-area")
              include svgs/icon-dashboard.svg
          li
            a(href="#members-area")
              include svgs/icon-members.svg
          li
            a(href="#visits-area")
              include svgs/icon-visits.svg
          li
            a(href="#settings-area")
              include svgs/icon-settings.svg
          li.notification-small
            a
              svg.bell
                use(xlink:href="#bell")

    main

      
      div.grid__row
        div.grid__col--12.no-margin
          div.contain
            h2 Dashboard
            input(type="text" placeholder="Serch")

      div.grid__row
        div.grid__col--12.no-margin
          div.contain
            div.alert This is an alert
            div.alert--default This is a default alert
            div.alert--disabled This is a disabled alert
            div.alert--success This is a success alert
            div.alert--error This is an error alert
            div.alert--warning This is a warning alert
            div.alert--info This is an info alert



      div.grid__row
        div.grid__col--12.no-margin
          div.contain
            h5 Daily Traffic
            canvas#chart-line



      div#dashboard-area.grid__row
        div.grid__col--6
          div.contain
            h5 Daily Traffic
            canvas#chart-bar
        div.grid__col--6
          div.contain
            h5 Mobile Users
            canvas#chart-doughnut
          

      div.grid__row
        div.grid__col--12.social-stats-col
          h5.social-stats-title Social Status
          div.all-social-stats
            table.social-stat-container
              tr
                th(rowspan="2")
                  div.social-icon--twitter
                th.social-icon-name Twiter
              tr
                td.social-icon-data 10,345

            table.social-stat-container
              tr
                th(rowspan="2")
                  div.social-icon--facebook
