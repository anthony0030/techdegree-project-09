      div.grid__row
        div.grid__col--6
          div.contain
            h5 Mesaage User
            form
              input.form__input(id="username" type="text" name="name" placeholder="Search for User")
              textarea.form__input(name="textarea" rows="5" cols="45" placeholder="Write something here")
              input.btn--default(type="submit" value="Send")


        div.grid__col--6
          div#settings-area.contain
            h5 Settings

            div.row
              label._50(for="email-notifications") Send Email Notifications
              div.onoffswitch
                  input.onoffswitch-checkbox(id="email-notifications" type="checkbox" name="onoffswitch" checked) 
                  label.onoffswitch-label(for="email-notifications")
                      span.onoffswitch-inner
                      span.onoffswitch-switch
            br
